    </header>
    <section class="flight-management-section">
      <div class="container mt-4" id="flight-info">
        <h3>Thông Tin Chuyến Bay</h3>
        <p id="info-content"></p>
        <ul class="nav nav-tabs" id="myTab" role="tablist">
          <li class="nav-item" role="presentation">
            <button
              class="nav-link active"
              id="them-nguoi-dung-tab"
              data-bs-toggle="tab"
              data-bs-target="#them-nguoi-dung"
              type="button"
              role="tab"
              aria-controls="them-nguoi-dung"
              aria-selected="true"
            >
              Sửa Người Dùng
            </button>
          </li>
        </ul>
        <div class="tab-content" id="myTabContent">
          <div
            class="tab-pane fade show active"
            id="them-nguoi-dung"
            role="tabpanel"
            aria-labelledby="them-nguoi-dung-tab"
          >
            <h2>Sửa Người Dùng</h2>
            <form id="user-form" action="/update-user" method="post">
              <div class="mb-none">
                <label for="username" class="form-label">Id người dùng:</label>
                <input
                  type="text"
                  class="form-control"
                  id="userId"
                  name="userId"
                  value="<%= userUpdate.id %>"
                />
              </div>
              <div class="mb-3">
                <label for="username" class="form-label">Tên người dùng:</label>
                <input
                  type="text"
                  class="form-control"
                  id="fullname"
                  name="fullname"
                  value="<%= userUpdate.fullname %>"
                />
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">Địa chỉ Email:</label>
                <input
                  type="email"
                  class="form-control"
                  id="email"
                  name="email"
                  value="<%= userUpdate.email %>"
                />
              </div>
              <div class="mb-3">
                <label for="password" class="form-label">Mật khẩu:</label>
                <input
                  type="text"
                  class="form-control"
                  id="password"
                  name="passwords"
                  value="<%= userUpdate.passwords %>"
                />
              </div>
              <button type="submit" class="btn btn-primary">Sửa</button>
            </form>
            <!-- Đây là nơi thêm bảng thông tin người dùng mới -->
          </div>
        </div>
      </div>
    </section>

