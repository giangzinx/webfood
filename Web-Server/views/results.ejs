    </header>
    <section class="demo">
      <nav class="navbar navbar-expand-lg navbar-light bg-light step-indicator">
        <div class="container-fluid">
          <div class="navbar-nav">
            <a class="nav-link active" aria-current="page" href="#"
              >1. Lựa chọn chuyến bay</a
            >
          </div>
        </div>
      </nav>
    </section>
    <% if(!listProducts || listProducts.length === 0){%>
    <script>
      alert(
        "Không tìm thấy chuyến bay bạn yêu cầu, Vui lòng tìm kiếm chuyến bay khác"
      );
      setTimeout(function () {
        var user_id = "<%= user_id%> ";
        window.location.href = `/home/${user_id}`; // Thay đổi URL tại đây
      }, 3000);
    </script>
    <% } else { %>
    <section class="search-header bg-primary text-white py-2 px-4">
      <div class="container">
        <div class="row align-items-center">
          <div class="col">
            <h2 class="h5 mb-0">CHUYẾN ĐI</h2>
            <p class="mb-0">
              <%= listProducts[0].adr_start %> ➜ <%= listProducts[0].adr_end %>
            </p>
            <p class="mb-0"><%= listProducts[0].day_start %></p>
          </div>
        </div>
      </div>
    </section>
    <section class="FlightSelectionTable container mt-3">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Mã chuyến bay</th>
            <th>Bắt đầu</th>
            <th>Kết thúc</th>
            <th>Giá</th>
            <th>Chi tiết chuyến bay</th>
            <th>Seclect</th>
            <!-- Empty for button column -->
          </tr>
        </thead>
        <tbody>
          <% listProducts.forEach(function(product) { %>
          <!-- Repeat this row for each flight entry -->
          <tr>
            <td>
              <span class="badge bg-danger">PTIT Airlines</span><br />
              <span><%= product.code %></span><br />
              <small class="text-muted">Airbus A321</small>
            </td>
            <td>
              <span><%= product.time_start %></span><br />
              <small class="text-muted"><%= product.adr_start %></small>
            </td>
            <td>
              <span><%= product.time_end %></span><br />
              <small class="text-muted"><%= product.adr_end %></small>
            </td>
            <td>
              <span class="price"><%= product.price %> VND</span><br />
              <small class="text-muted">(L1_ECO)</small>
            </td>
            <td>
              <a
                href="#flightDetails<%= product.code %>"
                class="text-info"
                data-bs-toggle="collapse"
                >Chi tiết</a
              >
              <div
                class="container mt-3 collapse"
                id="flightDetails<%= product.code %>"
              >
                <!-- Pill navs -->
                <ul
                  class="nav nav-pills mb-3"
                  id="pills-tab<%= product.code %>"
                  role="tablist"
                >
                  <li class="nav-item" role="presentation">
                    <button
                      class="nav-link active"
                      id="pills-flight-info-tab-<%= product.code %>"
                      data-bs-toggle="pill"
                      data-bs-target="#pills-flight-info-<%= product.code %>"
                      type="button"
                      role="tab"
                      aria-controls="pills-flight-info-<%= product.code %>"
                      aria-selected="true"
                    >
                      Thông tin
                    </button>
                  </li>
                  <li class="nav-item" role="presentation">
                    <button
                      class="nav-link"
                      id="pills-price-details-tab-<%= product.code %>"
                      data-bs-toggle="pill"
                      data-bs-target="#pills-price-details-<%= product.code %>"
                      type="button"
                      role="tab"
                      aria-controls="pills-price-details-<%= product.code %>"
                      aria-selected="false"
                    >
                      Chi tiết giá vé
                    </button>
                  </li>
                  <li class="nav-item" role="presentation">
                    <button
                      class="nav-link"
                      id="pills-ticket-conditions-tab-<%= product.code %>"
                      data-bs-toggle="pill"
                      data-bs-target="#pills-ticket-conditions-<%= product.code %>"
                      type="button"
                      role="tab"
                      aria-controls="pills-ticket-conditions-<%= product.code %>"
                      aria-selected="false"
                    >
                      Điều kiện vé
                    </button>
                  </li>
                </ul>

                <!-- Pill content -->
                <div
                  class="tab-content"
                  id="pills-tabContent<%= product.code %>"
                >
                  <div
                    class="tab-pane fade show active"
                    id="pills-flight-info-<%= product.code %>"
                    role="tabpanel"
                    aria-labelledby="pills-flight-info-tab-<%= product.code %>"
                  >
                    <p><%= product.adr_start %> → <%= product.adr_end %></p>
                    <p>Máy bay</p>
                    <p>Hành lý xách tay: 7Kg(56x36x23)cm</p>
                    <p>Hành lý ký gửi: 0Kg</p>
                  </div>
                  <div
                    class="tab-pane fade"
                    id="pills-price-details-<%= product.code %>"
                    role="tabpanel"
                    aria-labelledby="pills-price-details-tab-<%= product.code %>"
                  >
                    <h4>TỔNG GIÁ VÉ</h4>
                    <table class="totalprice table">
                      <thead>
                        <tr>
                          <th>Hành khách</th>
                          <th>Số lượng</th>
                          <th>Giá mỗi vé</th>
                          <th>Tổng giá</th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr>
                          <td>Người lớn</td>
                          <td>1</td>
                          <td><%= product.price %> VND</td>
                          <td><%= product.price %> VND</td>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                  <div
                    class="tab-pane fade"
                    id="pills-ticket-conditions-<%= product.code %>"
                    role="tabpanel"
                    aria-labelledby="pills-ticket-conditions-tab-<%= product.code %>"
                  >
                    <h5>Hoàn vé: Không được phép</h5>
                    <p>
                      Thay đổi ngày, giờ bay: 385.000VND/người/chặng + chênh
                      lệch (nếu có)
                    </p>
                    <p>
                      Thay đổi tên hành khách: 385.000VND/người/chặng + chênh
                      lệch (nếu có)
                    </p>
                    <p>
                      Thời hạn thay đổi (bao gồm thay đổi tên, ngày/chuyến bay,
                      hành trình): Mọi thông tin thay đổi đều phải thực hiện
                      trước tối thiểu 06 tiếng so với giờ khởi hành
                    </p>
                  </div>
                </div>
              </div>
            </td>
            <td>
              <button
                type="button"
                class="btn btn-primary choose-btn"
                data-bs-toggle="modal"
                data-bs-target="#myModal"
                data-product-code="<%= product.code %>"
                data-product-price="<%= product.price %>"
                data-product-adr_start="<%= product.adr_start %>"
                data-product-adr_end="<%= product.adr_end %>"
                data-product-time_start="<%= product.time_start %>"
                data-product-time_end="<%= product.time_end %>"
              >
                Chọn
              </button>
            </td>
          </tr>
          <tr></tr>
          <% }); %>
        </tbody>
      </table>
    </section>
    <!-- Đặt phần tử này ở nơi bạn muốn hiển thị thông báo -->
    <section id="notificationSection">
      <!-- Modal Thông Báo -->
      <div
        class="modal fade"
        id="notificationModal"
        tabindex="-1"
        aria-labelledby="notificationModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="notificationModalLabel">Thông Báo</h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">Bạn đã chọn vé thánh công.</div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >
                Đóng
              </button>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="modal fade" id="myModal">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <!-- Modal Header -->
          <div class="modal-header">
            <h4 class="modal-title">Bạn có chắc chắn muốn chọn loại vé này</h4>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
            ></button>
          </div>

          <!-- Modal body -->
          <div class="modal-body"></div>

          <!-- Modal footer -->
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-danger"
              data-bs-dismiss="modal"
              id="chooseButton"
            >
              Chọn
            </button>
          </div>
        </div>
      </div>
    </section>
    <% } %>
    <section class="contact-section">
      <div class="row">
        <div class="col span-1-of-3">
          <ul class="information">
            <li>
              <i class="fas fa-map-marker-alt small-icon"></i>Address: Km10,
              Đường Nguyễn Trãi, Q.Hà Đông, Hà Nội
            </li>
            <li>
              <i class="fas fa-envelope small-icon"></i>Email:
              SiVV.B21VT378@stu.ptit.edu.vn
            </li>
            <li><i class="fas fa-phone small-icon"></i>SĐT: (+84)0817952741</li>
          </ul>
          <ul class="social-icons">
            <li><i class="fab fa-facebook"></i></li>
            <li><i class="fab fa-twitter-square"></i></li>
            <li><i class="fab fa-instagram"></i></li>
            <li><i class="fab fa-google-plus-square"></i></li>
          </ul>
        </div>
      </div>
    </section>
    <footer>
      <p>Copyright &copy; 2024 by Vu Van Si</p>
    </footer>
    <script>
      // Used to toggle the menu on small screens when clicking on the menu button
      function myFunction() {
        var x = document.getElementById("navDemo");
        if (x.className.indexOf("w3-show") == -1) {
          x.className += " w3-show";
        } else {
          x.className = x.className.replace(" w3-show", "");
        }
      }
    </script>
    <script>
      $(document).ready(function () {
        $(".choose-btn").on("click", function () {
          var product_code = $(this).data("product-code");
          var product_adr_start = $(this).data("product-adr_start");
          var product_adr_end = $(this).data("product-adr_end");
          var product_time_start = $(this).data("product-time_start");
          var product_time_end = $(this).data("product-time_end");
          var product_price = $(this).data("product-price");

          // Cập nhật nội dung modal với thông tin sản phẩm
          var modalBody = `
            <table class="info_flight table table-striped">
              <thead>
                <tr>
                  <th scope="col"></th>
                  <th scope="col">Thông Tin</th>
                  <th scope="col">Chi Tiết</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <th scope="row">1</th>
                  <td>Mã chuyến bay</td>
                  <td>
                    <span class="badge bg-danger">Vietjet</span> ${product_code}
                  </td>
                </tr>
                <tr>
                  <th scope="row">2</th>
                  <td>Điểm đi</td>
                  <td>${product_adr_start}</td>
                </tr>
                <tr>
                  <th scope="row">3</th>
                  <td>Điểm đến</td>
                  <td>${product_adr_end}</td>
                </tr>
                <tr>
                  <th scope="row">4</th>
                  <td>Thời gian đi</td>
                  <td>${product_time_start}</td>
                </tr>
                <tr>
                  <th scope="row">5</th>
                  <td>Thời gian đến</td>
                  <td>${product_time_end}</td>
                </tr>
                <tr>
                  <th scope="row">6</th>
                  <td>Giá</td>
                  <td>${product_price} VND</td>
                </tr>
              </tbody>
            </table>
    `;
          $("#myModal .modal-body").html(modalBody);

          // Hiển thị modal
          $("#myModal").modal("show");
        });
      });
    </script>
    <script>
      $(document).ready(function () {
        $("#chooseButton").click(function () {
          // Hiển thị modal thông báo
          $("#notificationModal").modal("show");
        });

        // Khi modal thông báo được hiển thị
        $("#notificationModal").on("shown.bs.modal", function () {
          // Đặt thời gian chờ 5 giây trước khi chuyển trang
          setTimeout(function () {
            window.location.href = `/support/${<%= user_id %>}`; // Thay đổi URL tại đây
          }, 3000); // 5000 milliseconds = 5 seconds
        });
      });
    </script>
  </body>
</html>
