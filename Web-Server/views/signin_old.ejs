    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const emailInput = document.getElementById("email");
        const passwordInput = document.getElementById("passwords");
        const confirmPasswordInput =
          document.getElementById("confirm-password");

        // Validation as the user types or moves out of the input field
        emailInput.addEventListener("input", validateEmailField);
        passwordInput.addEventListener("input", validatePasswordField);
        confirmPasswordInput.addEventListener(
          "input",
          validateConfirmPasswordField
        );

        function validateEmailField() {
          const emailMessage = emailInput.nextElementSibling;
          if (!validateEmail(emailInput.value)) {
            emailMessage.textContent =
              "Email không hợp lệ. Ví dụ: sivu@gmail.com";
          } else {
            emailMessage.textContent = "";
          }
        }

        function validatePasswordField() {
          const passwordMessage = passwordInput.nextElementSibling;
          if (!validatePassword(passwordInput.value)) {
            passwordMessage.textContent =
              "Mật khẩu phải có ít nhất 6 ký tự và bao gồm cả chữ và số.";
          } else {
            passwordMessage.textContent = "";
            // Check confirm password again in case it was entered before the password
            validateConfirmPasswordField();
          }
        }

        function validateConfirmPasswordField() {
          const confirmPasswordMessage =
            confirmPasswordInput.nextElementSibling;
          if (passwordInput.value !== confirmPasswordInput.value) {
            confirmPasswordMessage.textContent =
              "Mật khẩu xác nhận không khớp. Vui lòng nhập lại.";
          } else {
            confirmPasswordMessage.textContent = "";
          }
        }

        function validateEmail(email) {
          const regex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
          return regex.test(email);
        }

        function validatePassword(password) {
          const minLength = 6;
          const hasLetter = /[a-zA-Z]/.test(password);
          const hasNumber = /\d/.test(password);
          return password.length >= minLength && hasLetter && hasNumber;
        }
      });
    </script>
